---
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';

type Props = CollectionEntry<'projects'>['data'];

const { title, description, pubDate, heroImage, lang } = Astro.props;
---

<Layout title={title} description={description} heroImage={heroImage} pubDate={pubDate} lang={lang}>
  <article class="max-w-3xl mx-auto p-4">
    <img src={heroImage} alt={title} class="w-full h-64 object-cover rounded-lg" />
    <div class="prose lg:prose-xl mx-auto">
      <slot />
    </div>
  </article>
</Layout>
