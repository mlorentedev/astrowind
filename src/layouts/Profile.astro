---
import Layout from "./Layout.astro";
import { useTranslations, type UiType } from "../i18n/utils";

const { title, description, heroImage, lang } = Astro.props;
const t = useTranslations(lang as UiType);
const pubDate = new Date();
---

<Layout
  title={title}
  description={description}
  heroImage={heroImage}
  pubDate={pubDate}
  lang={lang}
>
  <article class="text-gray-800 max-w-3xl mx-auto p-4">
    <div class="mb-4 text-center">
      <h1 class="text-6xl font-extrabold">{t("about.title")}</h1>
      <h2 class=" text-4xl py-2">{t("about.subtitle")}</h2>
      <hr class="my-2 border-gray-300" />
    </div>
    <div class="w-full max-w-full h-auto overflow-hidden rounded-lg shadow-lg mb-6">
      {heroImage && <img width={896} height={500} src={heroImage} alt="Manu" />}
    </div>
    <div class="prose lg:prose-xl mx-auto">
      <slot />
    </div>
  </article>
</Layout>
