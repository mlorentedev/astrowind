  title={t('about.title')}
  description={t('site.description')}
  heroImage={heroImage}
  lang={lang}
>
  <div class="py-2">
    <p>
      <span class="fa fa-briefcase about-icon"></span>
      {t('about.work.0')}
    </p>
    <p>
      {t('about.work.1')}
    </p>
    <p>
      {t('about.work.2')}
    </p>
  </div>

  <div class="py-2">
    <p>
      <span class="fa fa-graduation-cap about-icon"></span>
      {t('about.education.0')}
    </p>
    <p>
      {t('about.education.1')}
    </p>
    <p>
      {t('about.education.2')}
    </p>
    <p>
      {t('about.education.3')}
    </p>
  </div>

  <div class="py-2">
    <p>
      <span class="fa fa-code about-icon"></span>
      {t('about.tech.0')}
    </p>
    <p>
      {t('about.tech.1')}
    </p>
    <p>
      {t('about.tech.2')}
    </p>
  </div>

  <div class="py-2">
    <p>
      <span class="fa fa-globe-americas about-icon"></span>
      {t('about.world.0')}
    </p>
    <p class="py-1">
      {t('about.world.1')}
    </p>
  </div>

  <div class="py-2">
