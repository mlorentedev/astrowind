---
import HeaderLink from './HeaderLink.astro';

const { lang } = Astro.props;

const homeSlug = `/`;
const blogSlug = `/blog`;
const projectsSlug = `/projects`;
const aboutSlug = `/about`;
---

<div id="menu" class="text-gray-800 md:hidden flex flex-col px-2">
  <HeaderLink
    href={homeSlug}
    class="hover:text-cyan-700 block px-2 py-1 transition-transform duration-500 transform -translate-y-5 opacity-0 delay-100 animate-fadeIn"
  >
    Inicio
  </HeaderLink>
  <HeaderLink
    href={blogSlug}
    class="hover:text-cyan-700 block px-2 py-1 transition-transform duration-500 transform -translate-y-5 opacity-0 delay-200 animate-fadeIn"
  >
    Blog
  </HeaderLink>
  <HeaderLink
    href={projectsSlug}
    class="hover:text-cyan-700 block px-2 py-1 transition-transform duration-500 transform -translate-y-5 opacity-0 delay-200 animate-fadeIn"
  >
    Proyectos
    <HeaderLink
      href={aboutSlug}
      class="hover:text-cyan-700 block px-2 py-1 transition-transform duration-500 transform -translate-y-5 opacity-0 delay-300 animate-fadeIn"
    >
      Sobre m√≠
    </HeaderLink>
  </HeaderLink>
</div>
