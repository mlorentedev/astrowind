---
const { href, label, isDisabled } = Astro.props;
---

{
  isDisabled ? (
    <span class="disabled px-3 py-1 mx-1 bg-gray-600 text-gray-100 rounded-md cursor-not-allowed">
      {label}
    </span>
  ) : (
    <a
      href={href}
      class="page-link bg-gray-800 text-gray-100  px-3 py-1 rounded-md mx-1 hover:bg-cyan-700 transition-colors duration-200"
    >
      {label}
    </a>
  )
}
